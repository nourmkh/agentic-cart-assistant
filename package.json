{
  "name": "agentic-cart-assistant",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": ["frontend"],
  "scripts": {
    "dev": "concurrently -n fe,be -c cyan,magenta \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "cd backend && python -m uvicorn app.main:app --reload",
    "build": "npm run build --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "preview": "npm run preview --workspace=frontend"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
